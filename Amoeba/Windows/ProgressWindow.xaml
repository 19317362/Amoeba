<Window x:Class="Amoeba.Windows.ProgressWindow"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:prop="clr-namespace:Amoeba.Properties"     
        xmlns:local="clr-namespace:Amoeba.Windows" 
        Background="{DynamicResource WindowBackgroundBrush}"
        Title="{Binding Path=ProgressWindow_Title, Source={StaticResource ResourcesInstance}}" Height="188" Width="577" VerticalAlignment="Center"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    
    <Grid>
        <ProgressBar Height="24" Name="_progressBar" VerticalAlignment="Top" Margin="12,80,12,0" />
        <Label Content="" Height="28" Margin="12,12,12,0" Name="_label1" VerticalAlignment="Top" HorizontalAlignment="Center" />
        <Label Content="" Height="28" Margin="12,46,12,0" Name="_label2" VerticalAlignment="Top" HorizontalAlignment="Center" />
        <Button Content="" HorizontalAlignment="Center" Margin="240,0,240,12" Name="_button" Width="75" VerticalAlignment="Bottom" Click="_button_Click" Height="23" />
    </Grid>
</Window>
