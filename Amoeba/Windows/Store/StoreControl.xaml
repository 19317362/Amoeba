<UserControl x:Class="Amoeba.Windows.StoreControl"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prop="clr-namespace:Amoeba.Properties"     
        xmlns:local="clr-namespace:Amoeba.Windows" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        d:DesignHeight="500" d:DesignWidth="800">

    <Grid>
        <TabControl Name="_tabControl" SelectionChanged="_tabControl_SelectionChanged">
            <TabItem Header="{Binding Path=StoreControl_Download, Source={StaticResource ResourcesInstance}}" Name="_storeDownloadTabItem" />
            <TabItem Header="{Binding Path=StoreControl_Upload, Source={StaticResource ResourcesInstance}}" Name="_storeUploadTabItem" />
            <TabItem Header="{Binding Path=StoreControl_Library, Source={StaticResource ResourcesInstance}}" Name="_libraryTabItem" />
        </TabControl>
    </Grid>
</UserControl>
