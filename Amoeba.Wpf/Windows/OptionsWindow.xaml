                                    <MenuItem Name="_baseNodeUrisListViewCopyMenuItem" Header="{Binding Path=OptionsWindow_Copy, Source={StaticResource _languages}}" Click="_baseNodeUrisListViewCopyMenuItem_Click"/>
                                    <MenuItem Name="_baseNodeUrisListViewPasteMenuItem" Header="{Binding Path=OptionsWindow_Paste, Source={StaticResource _languages}}" Click="_baseNodeUrisListViewPasteMenuItem_Click"/>
