                        <Button Name="_baseNodeUriDeleteButton" Height="23" HorizontalAlignment="Right" Margin="0,0,6,6" VerticalAlignment="Bottom" Width="75" Content="{Binding Path=OptionsWindow_Delete, Source={StaticResource _languages}}" Click="_baseNodeUriDeleteButton_Click" />
                    </Grid>
                </GroupBox>
            </Grid>

            <Grid Grid.Column="2" FocusManager.FocusedElement="{Binding ElementName=_otherNodesListView}" Visibility="{Binding ElementName=_otherNodesTreeViewItem, Path=IsSelected, Converter={StaticResource _boolToVisibilityConverter}}">
                <GroupBox Header="{Binding Path=OptionsWindow_Nodes, Source={StaticResource _languages}}" Margin="0,36,0,0">
