                        <Label Content="{Binding Path=OptionsWindow_Option, Source={StaticResource _languages}}" Height="24" HorizontalAlignment="Left" Margin="6,0,0,140" VerticalAlignment="Bottom" Width="120" />
                        <TextBox Height="24" Margin="132,0,6,140" Name="_clientFiltersOptionTextBox" VerticalAlignment="Bottom" />
                        <GroupBox Header="{Binding Path=OptionsWindow_UriCondition, Source={StaticResource _languages}}" Margin="6,0,6,35" Height="99" VerticalAlignment="Bottom">
                            <Grid>
                                <Label HorizontalAlignment="Left" Margin="6,6,0,0" Width="120" Height="24" VerticalAlignment="Top" Content="{Binding Path=OptionsWindow_Type, Source={StaticResource _languages}}" />
                                <TextBox Margin="6,36,6,0" Name="_clientFiltersConditionTextBox" Height="23" VerticalAlignment="Top" KeyDown="_clientFiltersConditionTextBox_KeyDown" />
                                <ComboBox Margin="132,6,6,0" Name="_clientFiltersConditionSchemeComboBox" Height="24" VerticalAlignment="Top" PreviewMouseLeftButtonDown="_clientFiltersConditionSchemeComboBox_PreviewMouseLeftButtonDown" SelectionChanged="_clientFiltersConditionSchemeComboBox_SelectionChanged">
                                    <ComboBoxItem Content="tcp" IsSelected="True" />
                                    <ComboBoxItem Content="tor" />
                                    <ComboBoxItem Content="i2p" />
                                </ComboBox>
                            </Grid>
                        </GroupBox>
                        <Button Name="_clientFilterUpButton" Height="23" HorizontalAlignment="Right" Margin="0,0,330,6" VerticalAlignment="Bottom" Width="75" Content="{Binding Path=OptionsWindow_Up, Source={StaticResource _languages}}" Click="_clientFilterUpButton_Click" IsEnabled="False" />
                        <Button Name="_clientFilterDownButton" Height="23" HorizontalAlignment="Right" Margin="0,0,249,6" VerticalAlignment="Bottom" Width="75" Content="{Binding Path=OptionsWindow_Down, Source={StaticResource _languages}}" Click="_clientFilterDownButton_Click" IsEnabled="False" />
