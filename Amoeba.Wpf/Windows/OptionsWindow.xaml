                                        Width="{Binding Path=OptionsWindow_Client_Filters_GridViewColumn_Option_Width, Mode=TwoWay, Source={x:Static prop:Settings.Instance}}" CellTemplate="{StaticResource _myTemplate_ConnectionFilter_Option}" />
                                </GridView>
                            </ListView.View>
                        </local:ListViewEx>
                        <Label Margin="6,0,0,200" HorizontalAlignment="Left" Width="120" Content="{Binding Path=OptionsWindow_ConnectionType, Source={StaticResource _languages}}" Height="24" VerticalAlignment="Bottom" />
                        <ComboBox Margin="132,0,6,200" Name="_clientFiltersConnectionTypeComboBox" Height="24" VerticalAlignment="Bottom" PreviewMouseLeftButtonDown="_clientFiltersConnectionTypeComboBox_PreviewMouseLeftButtonDown" SelectionChanged="_clientFiltersConnectionTypeComboBox_SelectionChanged">
