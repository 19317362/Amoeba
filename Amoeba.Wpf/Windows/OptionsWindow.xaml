                <GroupBox Header="{Binding Path=OptionsWindow_Filters, Source={StaticResource _languages}}">
                    <Grid>
                        <local:ListViewEx Margin="6,6,6,230" x:Name="_clientFiltersListView" PreviewMouseLeftButtonDown="_clientFiltersListView_PreviewMouseLeftButtonDown" SelectionChanged="_clientFiltersListView_SelectionChanged" ContextMenuOpening="_clientFiltersListView_ContextMenuOpening">
