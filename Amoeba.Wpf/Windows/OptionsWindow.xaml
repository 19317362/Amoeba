                    <TreeViewItem Name="_clientTreeViewItem" Header="{Binding Path=OptionsWindow_Client, Source={StaticResource _languages}}" />
                    <TreeViewItem Name="_serverTreeViewItem" Header="{Binding Path=OptionsWindow_Server, Source={StaticResource _languages}}" />
                    <TreeViewItem Name="_dataTreeViewItem" Header="{Binding Path=OptionsWindow_Data, Source={StaticResource _languages}}" />
                    <TreeViewItem Name="_bandwidthTreeViewItem" Header="{Binding Path=OptionsWindow_Bandwidth, Source={StaticResource _languages}}" />
                    <TreeViewItem Name="_transferTreeViewItem" Header="{Binding Path=OptionsWindow_Transfer, Source={StaticResource _languages}}" />
                    <TreeViewItem Name="_eventsTreeViewItem" Header="{Binding Path=OptionsWindow_Events, Source={StaticResource _languages}}" />
                    <TreeViewItem Name="_updateTreeViewItem" Header="{Binding Path=OptionsWindow_Update, Source={StaticResource _languages}}" />
                </TreeViewItem>
                <TreeViewItem Name="_viewTreeViewItem" Header="{Binding Path=OptionsWindow_View, Source={StaticResource _languages}}" IsExpanded="True">
                    <TreeViewItem Name="_signaturesTreeViewItem" Header="{Binding Path=OptionsWindow_Signatures, Source={StaticResource _languages}}" />
                    <TreeViewItem Name="_keywordsTreeViewItem" Header="{Binding Path=OptionsWindow_Keywords, Source={StaticResource _languages}}" />
                    <TreeViewItem Name="_boxTreeViewItem" Header="{Binding Path=OptionsWindow_Box, Source={StaticResource _languages}}" />
                    <TreeViewItem Name="_miningTreeViewItem" Header="{Binding Path=OptionsWindow_Mining, Source={StaticResource _languages}}" />
                    <TreeViewItem Name="_fontsTreeViewItem" Header="{Binding Path=OptionsWindow_Fonts, Source={StaticResource _languages}}" />
                </TreeViewItem>
            </TreeView>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Grid.RowSpan="3" />

            <Grid Grid.Column="2" FocusManager.FocusedElement="{Binding ElementName=_baseNodeUriTextBox}" Visibility="{Binding ElementName=_baseNodeTreeViewItem, Path=IsSelected, Converter={StaticResource _boolToVisibilityConverter}}">
